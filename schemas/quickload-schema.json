{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuickLoad Schema",
  "type": "object",

  "required": ["version", "DASF", "SyntaxModules", "PersonaRegistry", "ExcludeEngine", "OutputSpec", "RuntimeFlags"],

  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?(-[A-Za-z0-9]+)?$"
    },

    "DASF": {
      "type": "object",
      "required": ["version", "path"],
      "properties": {
        "version": { "type": "string" },
        "path": { "type": "string" }
      }
    },

    "SyntaxModules": {
      "type": "object",
      "required": ["modules", "default"],
      "properties": {
        "default": { "type": "string" },
        "modules": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "path"],
            "properties": {
              "name": { "type": "string" },
              "path": { "type": "string" }
            }
          }
        }
      }
    },

    "PersonaRegistry": {
      "type": "object",
      "required": ["enabled", "personas"],
      "properties": {
        "enabled": { "type": "boolean" },
        "personas": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "id", "path"],
            "properties": {
              "name": { "type": "string" },
              "id": { "type": "string" },
              "path": { "type": "string" }
            }
          }
        }
      }
    },

    "ExcludeEngine": {
      "type": "object",
      "required": ["version", "path"],
      "properties": {
        "version": { "type": "string" },
        "path": { "type": "string" }
      }
    },

    "OutputSpec": {
      "type": "object",
      "required": ["format", "outer_header_mode", "directive_layout", "code_fence"],
      "properties": {
        "format": { "type": "string" },
        "outer_header_mode": { "type": "boolean" },
        "directive_layout": { "type": "string" },
        "code_fence": { "type": "boolean" }
      }
    },

    "RuntimeFlags": {
      "type": "object",
      "properties": {
        "AutoRebind": { "type": "boolean" },
        "AllowExperimentalTags": { "type": "boolean" },
        "InterFlowDensityAutoAdjust": { "type": "boolean" },
        "EmotionOverflow": { "type": "string" },
        "AdaptiveTagUtilization": { "type": "string" },
        "DirectiveTolerance": { "type": "string" }
      }
    }
  }
}
