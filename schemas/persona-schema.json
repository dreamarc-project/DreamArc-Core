{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "version", "profile"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "profile": {
      "type": "object",
      "required": ["name", "role"],
      "properties": {
        "name": {"type": "string"},
        "role": {"type": "string"},
        "description": {"type": "string"}
      }
    }
  }
}
