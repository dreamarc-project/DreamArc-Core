{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExcludeEngine Schema",
  "type": "object",

  "required": ["version", "rules"],

  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$"
    },

    "rules": {
      "type": "array",
      "description": "List of exclusion rules used by DASF ExcludeEngine v3.0",
      "items": {
        "type": "object",
        "required": ["category", "patterns"],
        "properties": {
          "category": {
            "type": "string",
            "description": "Logical category of the exclusion set (e.g., 'forbidden', 'style', 'safety')"
          },
          "patterns": {
            "type": "array",
            "items": { "type": "string" },
            "description": "List of keyword patterns to exclude"
          }
        }
      }
    }
  }
}
